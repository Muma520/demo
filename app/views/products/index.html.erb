<link rel="stylesheet" href="./app/assets/stylesheets/test.css">
<h1 class="page-title"><%= t ".title" %></h1>

<h1 class="page-title">Products</h1>

<%= link_to "New product", new_product_path, class: 'new-product-link' if authenticated? %>

<%= link_to "Login", new_session_path, class: 'login-link' unless authenticated? %>

<div id="products" class="product-list">
  <% @products.each do |product| %>
    <div class="product-item">
      <%= link_to product.name, product, class: 'product-link' %>
    </div>
  <% end %>
</div>
