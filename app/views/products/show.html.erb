<link rel="stylesheet" href="./app/assets/stylesheets/application.css">
<% cache @product do %>
    <div class="product-detail">
      <h1 class="product-title"><%= @product.name %></h1>
      <p class="product-description"><%= @product.description %></p>
      <%= image_tag @product.featured_image, class: 'product-image' if @product.featured_image.attached? %>
    </div>
  <% end %>
  
  <%= render "inventory", product: @product, class: 'inventory-details' %>
  
  <div class="product-actions">
    <%= link_to "Back", products_path, class: 'back-link' %>
    <% if authenticated? %>
      <%= link_to "Edit", edit_product_path(@product), class: 'edit-link' %>
      <%= button_to "Destroy", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: 'destroy-button' %>
    <% end %>
  </div>
  